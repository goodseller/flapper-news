<html>
<head>
  <title>Blood Pressure and Heart Rate</title>

  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.0/ui-bootstrap-tpls.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

  <script src="bower_components/jquery/dist/jquery.js"></script>

<meta charset="utf-8">
  <script src="bower_components/d3/d3.js"></script>
  <script src="/js/bphrApp.js"></script>
  <link rel="stylesheet" href="css/style.css">

  <style>
  .glyphicon-thumbs-up, .glyphicon-thumbs-down { cursor:pointer }
  .btn-right {
	float: right;
  }
  </style>
</head>

<body ng-app="bphrApp">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
		<ui-view></ui-view>
    </div>
  </div>

<script type="text/ng-template" id="/home.html">
<div class="container col-sm-10 col-sm-offset-1" ng-controller="recordsController">
  <div class="table-responsive">
  	<table class="table table-condensed table-striped table-hover">
  		<thead>
  			<tr>
  				<th>Date</th>
  				<th>Systolic mm Hg (Upper Rate)</th>
  				<th>Diastolic mm Hg (Lower Rate)</th>
  				<th>Pulse Pressure / min.</th>
  			</tr>
  		</thead>
  		<tbody>
  		<tr ng-repeat="record in records | orderBy:'-date'">

  			<td>{{record.date | date:'yyyy-MM-dd HH:mm:ss'}}</td>
  			<td>{{record.upper_bp}}</td>
  			<td>{{record.lower_bp}}</td>
  			<td>{{record.pulse}}</td>
  		</tr>
  		</tbody>
  	</table>
  </div></div>

<div class="col-sm-8 col-sm-offset-2">
	<h1><span class="fa fa-heart"></span> Add BPHR Record</h1>

	<!-- Blood Pressure and Heart Rate FORM -->
	<form action="/bphr/records" method="post">
		<div class="form-group">
			<label>Date</label>
			<input type="date" class="form-control" name="date">
		</div>
		<div class="form-group">
			<label>Systolic mm Hg  (Upper Rate)</label>
			<input type="text" class="form-control" name="upper_bp">
			<label>Diastolic mm Hg (Lower Rate)</label>
			<input type="text" class="form-control" name="lower_bp">
			<label>Pulse Pressure</label>
			<input type="text" class="form-control" name="pulse">
		</div>

		<button type="submit" class="btn btn-warning btn-lg">Submit</button>
	</form>
</div>
</script>

<script type="text/ng-template" id="/main.html">
<div ng-controller="MainCtrl">
  <div class="page-header">
    <h1>Flapper News</h1>
  </div>

  <div ng-repeat="post in posts | orderBy:'-upvotes'">
	<span class="glyphicon glyphicon-thumbs-up"
	  ng-click="upvotes(post)"></span>
	<span class="glyphicon glyphicon-thumbs-down"
      ng-click="downvotes(post)"></span>
	{{post.upvotes}}
	<span style="font-size:20px; margin-left:10px;">
	  <a ng-show="post.link" href="{{post.link}}">
		{{post.title}}
	  </a>
	  <span ng-hide="post.link">
		{{post.title}}
	  </span>
	</span>
	<span>
		<a href="#/posts/{{post._id}}">Comments</a>
	  <!--<a href="#/posts/{{$index}}">Comments</a>-->
	</span>
	<span>
		<a href="#" ng-click="delete(post)" class="btn-delete">X</a>
	</span>
  </div>

	<form ng-submit="addPost()"
	style="margin-top:30px;">
	<h3>Add a new post</h3>

	<div class="form-group">
	  <input type="text"
		class="form-control"
		placeholder="Title"
		ng-model="title"></input>
	</div>
	<div class="form-group">
	  <input type="text"
	  class="form-control"
	  placeholder="Link"
	  ng-model="link"></input>
	</div>
	<button type="submit" class="btn btn-primary btn-right">Post</button>
  </form>
</script>

<script type="text/ng-template" id="/wall/posts.html">
  <div class="page-header">
    <h3>
      <a ng-show="post.link" href="{{post.link}}">
        {{post.title}}
      </a>
      <span ng-hide="post.link">
        {{post.title}}
      </span>
    </h3>
  </div>

  <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
    <span class="glyphicon glyphicon-thumbs-up"
      ng-click="upvotes(comment)"></span>
    <span class="glyphicon glyphicon-thumbs-down"
      ng-click="downvotes(comment)"></span>
    {{comment.upvotes}} - by {{comment.author}}
    <span style="font-size:20px; margin-left:10px;">
      {{comment.body}}
    </span>
	<span>
		<a href="#" ng-click="delete(comment)" class="btn-delete">X</a>
	</span>
  </div>

  <form ng-submit="addComment()"
    style="margin-top:30px;">
    <h3>Add a new comment</h3>

    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Comment"
      ng-model="body"></input>
    </div>
    <button type="submit" class="btn btn-primary btn-right">Post</button>
  </form>
  <div>
	<a href="#/home"><button type="submit" class="btn btn-primary">< Back</button></a>
  </div>
</script>

</body>
</html>
